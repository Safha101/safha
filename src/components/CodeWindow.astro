---
// src/components/CodeWindow.astro
const { command, language = "bash" } = Astro.props;

let copied = false;
---

<aside
  class="relative bg-deep-ocean dark:bg-deep-ocean text-snow-white dark:text-mountain-mist p-6 rounded-lg w-full font-mono transition-colors duration-200"
>
  <div class="flex justify-between items-center mb-4 gap-4">
    <div class="flex justify-between">
      <div class="w-3 h-3 rounded-full bg-red-500"></div>
      <div class="w-3 mx-2 h-3 rounded-full bg-yellow-500"></div>
      <div class="w-3 h-3 rounded-full bg-green-500"></div>
    </div>

    <div class="flex items-center gap-3 flex-shrink-0">
      <p class="text-sm text-mountain-mist dark:text-gray-400">{language}</p>
      <button
        class="bg-morning-fog copy-button hover:bg-gray-300 dark:bg-mountain-mist dark:hover:bg-gray-600 text-deep-ocean dark:text-snow-white text-xs px-3 py-1.5 rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-blue"
        data-command={command}
        aria-label="Copy code"
      >
        {copied ? "تم النسخ!" : "نسخ الكود"}
      </button>
    </div>
  </div>

  <div
    id="code-window-content"
    class="text-sm whitespace-pre-wrap text-left overflow-x-auto pb-2 font-[Menlo,Monaco,Consolas,'Liberation Mono','Courier New',monospace]"
  >
    {command}
  </div>
</aside>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".copy-button");
    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        const command = button.dataset.command;
        navigator.clipboard
          .writeText(command)
          .then(() => {
            button.textContent = "تم النسخ!";
            setTimeout(() => {
              button.textContent = "نسخ الكود";
            }, 2000);
          })
          .catch((err) => {
            console.error("Failed to copy text: ", err);
          });
      });
    });
  });
</script>

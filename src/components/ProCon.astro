---
interface Props {
  pros: string[];
  cons: string[];
}

const { pros, cons } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-6">
  <div class="border border-green-200 dark:border-green-700 rounded-lg p-4 bg-green-50 dark:bg-green-900/20">
    <h3 class="text-lg font-bold text-green-800 dark:text-green-300 mb-2">المزايا (Pros)</h3>
    <ul class="list-disc list-inside space-y-2">
      {pros.map((pro) => (
        <li class="text-gray-700 dark:text-gray-300">{pro}</li>
      ))}
    </ul>
  </div>
  <div class="border border-red-200 dark:border-red-700 rounded-lg p-4 bg-red-50 dark:bg-red-900/20">
    <h3 class="text-lg font-bold text-red-800 dark:text-red-300 mb-2">العيوب (Cons)</h3>
    <ul class="list-disc list-inside space-y-2">
      {cons.map((con) => (
        <li class="text-gray-700 dark:text-gray-300">{con}</li>
      ))}
    </ul>
  </div>
</div>
